<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PhotoSearch.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#F5F5F5</item>                            <!-- app bar -->
        <item name="colorPrimaryDark">#E0E0E0</item>                        <!-- status bar -->
        <item name="colorAccent">#F5F5F5</item>
        <item name="android:background">#FAFAFA</item>                      <!-- background -->
        <item name="colorSurface">#FFFFFF</item>                            <!-- card background -->
        <item name="android:textColor">@android:color/black</item>
        <item name="itemIconTint">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.PhotoSearch.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#212121</item>
        <item name="android:background">#303030</item>
        <item name="colorSurface">#424242</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.PhotoSearch.DayNight" parent="Theme.PhotoSearch.Light" />
</resources>